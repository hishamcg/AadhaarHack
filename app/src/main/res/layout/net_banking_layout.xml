<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    android:padding="20dip">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="SELECT FROM POPULAR BANKS"
        android:layout_marginBottom="20dip"
        android:textColor="#a444"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip">
        <ImageView
            android:id="@+id/sbi"
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:layout_marginRight="5dip"
            android:layout_marginEnd="5dip"
            android:src="@drawable/sbi"
            android:padding="10dip"
            android:background="@drawable/border_black"/>
        <ImageView
            android:id="@+id/hdfc"
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:layout_marginLeft="5dip"
            android:layout_marginStart="5dip"
            android:src="@drawable/hdfc"
            android:padding="10dip"
            android:background="@drawable/border_black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/icici"
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:layout_marginRight="5dip"
            android:layout_marginEnd="5dip"
            android:src="@drawable/icici"
            android:padding="10dip"
            android:background="@drawable/border_black"/>
        <ImageView
            android:id="@+id/axis"
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:layout_marginLeft="5dip"
            android:layout_marginStart="5dip"
            android:src="@drawable/axis"
            android:padding="10dip"
            android:background="@drawable/border_black"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="OR SELECT OTHER BANK"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:textColor="#a444"/>

    <TextView
        android:id="@+id/banks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:layout_marginBottom="10dip"
        android:text="Select Bank"
        android:gravity="center"
        android:background="@drawable/border_black"
        android:drawablePadding="10dip"
        android:drawableRight="@drawable/arrow_down_small"
        android:drawableEnd="@drawable/arrow_down_small"/>

    <com.dd.processbutton.iml.ActionProcessButton
        android:id="@+id/net_pay"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Pay Now"
        android:textColor="#fff"
        android:padding="10dip"
        android:background="@drawable/lightblue_container"/>

</LinearLayout>